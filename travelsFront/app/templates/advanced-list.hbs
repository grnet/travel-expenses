{{#if (can "approve petition")}}
	<div>
		<table class="table table-sm" > 
			<thead>
				<tr>
					<th>Όνομα</th>
					<th>Επώνυμο</th>
					<th>Έργο</th>
					<th>Προορισμός</th>
					<th>Ημ/νια Δημιουργίας</th>
					<th>Τελευταία ανανέωση</th>
					<th>Ημ/νία Αναχώρησης</th>
					<th>Ημ/νία Επιστροφής</th>
					<th>Κατάσταση</th>
				</tr>
			</thead>
			<tbody>

			{{#each model as |petition|}}
				{{#if petition.project.name}}
					<tr>
						<td>{{petition.name}}</td>
						<td>{{petition.surname}}</td>
						<td>{{petition.project.name}}</td>
						<td>{{petition.arrivalPoint.name}}</td>
						<td>{{petition.creationDate}}</td>
						<td>{{petition.updateDate}}</td>
						<td>{{petition.taskStartDate}}</td>
						<td>{{petition.taskEndDate}}</td>
						<td>{{petition.status.name}}</td>
						<td><button type="submit" class="btn btn-warning btn-small" {{action "petitionEdit" petition.id on="click"}} disabled={{not (or (eq petition.status.name "υποβεβλημένη από μετακινούμενο") (eq petition.status.name "σε επεξεργασία απο τη γραμματεία")) }}>Επεξεργασία</button></td>
						<td><button type="submit" class="btn btn-danger btn-small" {{action "petitionDelete" petition.id petition.status.name on="click"}} disabled={{not (or (eq petition.status.name "υποβεβλημένη από μετακινούμενο") (eq petition.status.name "σε επεξεργασία απο τη γραμματεία")) }}>Διαγραφή</button></td>
						<td><button type="submit" class="btn btn-danger btn-small" {{action "petitionUndo" petition.id on="click"}} disabled={{or (eq petition.status.name "υποβεβλημένη από μετακινούμενο") (eq petition.status.name "σε επεξεργασία απο τη γραμματεία") }}>Αναίρεση Υποβολής </button></td>
					</tr>
				{{/if}}
			{{/each}}

			</tbody>
		</table>
<!-- Message Modal-->
		<div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header" id="styleModal">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
						<h4 class="modal-title" id="myModalLabel"><font>{{deleteMessage}}</font></h4>
					</div>
				</div>
			</div>
		</div>

	</div>
{{else}}
	We are sorry but you don't have permmission to view this page...
{{/if}}

{{outlet}}
