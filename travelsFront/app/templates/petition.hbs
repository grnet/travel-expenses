	<form class="form-horizontal col-md-6 rightForm"  {{action "petitionUpdate" on="submit"}}>	

		<h4>Στοιχεία Αίτησης Ταξιδιού</h4><br>

		<div class="profileForm form-group">
			<label for="categoryOfTransport" class="col-sm-4 control-label">Κατηγορία Μετακίνησης</label><br>
		<div class="col-sm-8">	
			
		</div>
		</div> 

		<div class="profileForm form-group">
			<label for="project" class="col-sm-4 control-label">Έργο</label>
		<div class="col-sm-8">
			<select onchange={{action "setProject" value="target.value"}}>
				{{#each projects as |projectChoice|}}
				<option value={{projectChoice.id}} selected={{eq projectChoice.id model.projectChoice.id}}>{{projectChoice.name}}</option>
				{{/each}}
			</select>	
			<!-- {{input value=model.project type="text" class="form-control" autofocus="autofocus"}} -->
		</div>
		</div>

		<div class="profileForm form-group">
			<label for="taskStartDate" class="col-sm-4 control-label">Ημ/νία - Ώρα Έναρξης Εργασιών</label>
		<div class="col-sm-8">	
			{{input value=model.taskStartDate type="date" class="form-control" autofocus="autofocus"}}
			{{input value=model.taskStartTime type="time" class="form-control" autofocus="autofocus"}}
		</div>
		</div>

		<div class="profileForm form-group">
			<label for="taskEndDate" class="col-sm-4 control-label">Ημ/νία - Ώρα Λήξης Εργασιών</label>
		<div class="col-sm-8">	
			{{input value=model.taskEndDate type="date" class="form-control" autofocus="autofocus"}}
			{{input value=model.taskEndTime type="time" class="form-control" autofocus="autofocus"}}
		</div>
		</div>

		<div class="profileForm form-group">
			<label for="departurePoint" class="col-sm-4 control-label">Τόπος Αναχώρησης</label>
		<div class="col-sm-8">	
			{{input value=model.departure_point type="text" class="form-control" autofocus="autofocus"}}
		</div>
		</div>

		<div class="profileForm form-group">
			<label for="arrival_point" class="col-sm-4 control-label">Τόπος Προορισμού</label>
		<div class="col-sm-8">	
			{{input value=model.arrival_point type="text" class="form-control" autofocus="autofocus"}}
		</div>
		</div>

		<div class="profileForm form-group">
			<label for="transportation" class="col-sm-4 control-label">Μέσο Μετακίνησης</label>
		<div class="col-sm-8">	
			{{input value=model.transportation type="text" class="form-control" autofocus="autofocus"}}
		</div>
		</div> 

		<div class="profileForm form-group">
			<label for="recTransport" class="col-sm-4 control-label">Προτεινόμενα Μέσα Μετακίνησης</label>
		<div class="col-sm-8">	
			{{#character-limit max=100}}
			{{textarea value=model.recTransport type="text" class="form-control" autofocus="autofocus"}}
			{{/character-limit}}
		</div>
		</div>

		<div class="profileForm form-group">
			<label for="recAccomondation" class="col-sm-4 control-label">Προτεινόμενο Κατάλυμα</label>
		<div class="col-sm-8">	
			{{#character-limit max=100}}
			{{textarea value=model.recAccomondation type="textarea" class="form-control" autofocus="autofocus"}}
			{{/character-limit}}
		</div>
		</div>

		<div class="profileForm form-group">
			<label for="recCostParticipation" class="col-sm-4 control-label">Κόστος Συμμετοχής</label>
		<div class="col-sm-8">	
			{{#character-limit max=100}}
			{{textarea value=model.recCostParticipation type="textarea" class="form-control" autofocus="autofocus"}}
			{{/character-limit}}
		</div>
		</div>

		<div class="profileForm form-group">
			<label for="reason" class="col-sm-4 control-label">Αιτιολογία Μετακίνησης</label>
		<div class="col-sm-8">	
			{{#character-limit max=100}}
			{{textarea value=model.reason type="textarea" class="form-control" autofocus="autofocus"}}
			{{/character-limit}}
		</div>
		</div>
	</form><br>
	
	<button type="save" class="btn btn-primary">Αποθήκευση Στοιχείων</button>
	<button type="submit" class="btn btn-primary">Υποβολή Αίτησης</button>
	
</div>

{{outlet}}




