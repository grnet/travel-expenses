{{ page-toolbar pageTitle=(t "petition_edit.title") }}

{{#paper-content}}
  {{#paper-content padding=true}}
  {{# model-form/form model registerForm=this getModelForSave=getModelForSave successMessage=(t 'petition_saved')  
    onError=(action 'onError') onSuccess=(action 'onSuccess') as |form| }}
      {{ form.messages }}
      {{ form.fields }}
      {{# form.controls }}
        {{#if model.passedAccommodationLimit}}
          {{list-action action=(action "handleSubmit")
            confirm=true value=(t 'form.button.submit')
            tooltip-message=(t 'tooltip_save_b4_submit')
            promptTitle=(t 'prompt_limit_title')
            promptMessage=(t 'prompt_limit_message')
          }}
        {{else}}
          {{list-action action=(action "handleSubmit")
            confirm=true value=(t 'form.button.submit')
            tooltip-message=(t 'tooltip_save_b4_submit')
            promptTitle=(t 'prompt_submit_title')
            promptMessage=(t 'prompt_secretary_submit_message')
          }}
        {{/if}}
      {{/ form.controls}}
  {{/ model-form/form }}
  {{/paper-content}}
{{/paper-content}}
