{{ page-toolbar pageTitle=(if newPetition "Create a petition" "Edit petition") }}

{{#paper-content classNames="md-padding"}}
    {{# model-form/form model registerForm=this getModelForSave=getModelForSave successMessage="Petition saved" 
            onError=(action 'onError') onSuccess=(action 'onSuccess') as |form| }}
        {{ form.messages }}
        {{ form.fields }}
        {{# form.controls }}
            {{#paper-button 
                onClick=(action "handleSubmit")
                warn=true
                raised=true
                disabled=modelform.inProgress
            }}{{t 'submit'}}{{/paper-button}}
        {{/ form.controls}}
    {{/ model-form/form }}
{{/paper-content}}
