{{#paper-card}}
  {{#paper-card-content class="filterCard"}}
  {{paper-input class="filterInput" value=filters.dse onChange=(action (mut filters.dse)) type="number" placeholder=(t 'placeholder.filterByDSE')}}
  {{paper-input class="filterInput" value=filters.last_name onChange=(action (mut filters.last_name)) placeholder=(t 'placeholder.filterByName')}}
  {{#paper-select class="filterSelect" value=filters.project.name onChange=(action (mut filters.project)) placeholder=(t 'placeholder.filterByProject')}}
    {{#each projects as |project|}}
      {{#paper-option value=project }}
        {{project.name}}
      {{/paper-option}}
    {{/each}}
  {{/paper-select}}
  {{#paper-select class="filterSelect" value=filters.status onChange=(action (mut filters.status)) placeholder=(t 'placeholder.filterByStatus')}}
    {{#each statuses as |status|}}
      {{#paper-option value=status }}
        {{status}}
      {{/paper-option}}
    {{/each}}
  {{/paper-select}}
  {{pick-a-date date=filters.depart_date__gte on-selected=(action (mut filters.depart_date__gte)) placeholder=(t 'placeholder.filterByStartDateFrom')}}
  {{pick-a-date date=filters.depart_date__lte on-selected=(action (mut filters.depart_date__lte)) placeholder=(t 'placeholder.filterByStartDateTo')}}
  {{pick-a-date date=filters.return_date__lte on-selected=(action (mut filters.return_date__lte)) placeholder=(t 'placeholder.filterByEndDate')}}
  {{#paper-select class="filterSelect" value=(if filters.withdrawn.name (t filters.withdrawn.name) filters.withdrawn.name) onChange=(action (mut filters.withdrawn)) placeholder=(t 'placeholder.filterWithdrawn') }}
    {{#each withdrawns as |withdrawn|}}
      {{#paper-option value=withdrawn}}
        {{t withdrawn.name}}
      {{/paper-option}}
    {{/each}}
  {{/paper-select}}
{{/paper-card-content}}
  <div class="md-actions" layout="row" style="margin-left:1%;">
    {{#paper-button bubbles=false raised=true onClick=(action "handleFilterEntry")}}{{t 'list.button.search'}}{{/paper-button}}
    {{#paper-button bubbles=false raised=true onClick=(action "clearFilters")}}{{t 'list.button.clear'}}{{/paper-button}}
  </div>
{{/paper-card}}
