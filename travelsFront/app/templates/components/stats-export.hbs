{{#paper-card as |card|}}
	{{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}{{t 'stats.title.export'}}{{/text.headline}}
    {{/title.text}}
  {{/card.title}}
  {{#paper-card-content}}
		{{#paper-select class="filterSelect" value=filters.project.name onChange=(action (mut filters.project)) placeholder=placeholderLabel }}
			{{#each projects as |project|}}
	  		{{#paper-option value=project }}
	    		{{project.name}}
	  		{{/paper-option}}
			{{/each}}
		{{/paper-select}}
	{{/paper-card-content}}
	{{#card.actions class="layout-column"}}
    {{#paper-button raised=true onClick=(action "statsExportPerProject")}}{{t 'stats.button.export'}}{{/paper-button}}
  {{/card.actions}}
{{/paper-card}}

