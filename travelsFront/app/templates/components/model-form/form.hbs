{{# if hasBlock}}
{{else}}
    {{model-form/messages 
        isInvalid=isInvalid 
        submitError=submitError 
        errors=errors 
        submitMessage=submitMessage
    }}
    {{model-form/fields object=model fieldsets=meta.fieldsets isTouched=isTouched}}
    {{model-form/controls
        object=model
        submit=(action 'submit')
        submitLabel=submitLabel
        reset=(action 'reset')
        hideReset=hideReset
        inProgress=inProgress
    }}
{{/if}}
