{{#unless flat}}
{{#paper-content classNames="md-padding layout-column model-form-fieldset" flex=layout.flex}}
{{#paper-card as |card|}}
    {{#card.title as |title|}}
        {{#title.text as |ctext|}}
            {{#ctext.headline}}{{t label}}{{/ctext.headline}}
            {{#if text}}
                {{#ctext.subhead}}{{t text}}{{/ctext.subhead}}
            {{/if}}
        {{/title.text}}
    {{/card.title}}
    {{#card.content}}
        {{#paper-content classNames="layout-wrap layout-xs-column layout-gt-xs-row" }}
            {{#each fields as |field|}}
                {{model-form/field 
                    field=field
                    object=object
                    isTouched=isTouched
                }}
            {{/each}}
        {{/paper-content}}
    {{/card.content}}
{{/paper-card}}
{{/paper-content}}
{{ else }}
  {{#paper-content classNames="md-padding layout-column model-form-fieldset" flex=layout.flex}}
    {{#paper-content classNames="layout-wrap layout-xs-column layout-gt-xs-row" }}
      {{#each fields as |field|}}
        {{model-form/field 
            field=field
            object=object
            isTouched=isTouched
        }}
      {{/each}}
    {{/paper-content}}
  {{/paper-content}}
{{/unless}}
