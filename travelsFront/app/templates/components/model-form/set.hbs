{{#paper-content classNames="md-padding layout-column model-form-fieldset" flex=layout.flex}}
    {{#if label}}
        {{#paper-content flex=100}}
            <h2>{{ label }}</h2>
        {{/paper-content}}
    {{/if}}
    {{#paper-content classNames="layout-wrap layout-xs-column layout-gt-xs-row" }}
        {{#each fields as |field|}}
            {{model-form/field 
                field=field
                object=object
                isTouched=isTouched
            }}
        {{/each}}
    {{/paper-content}}
{{/paper-content}}
