{{paper-input
    label=label
    value=value
    onChange=(action 'handleChange')
    errors=errors
    isTouched=isTouched

    classNames=fattrs.class

    type=fattrs.type
    icon=fattrs.icon
    accesskey=fattrs.accesskey
    autocomplete=fattrs.autocomplete
    autofocus=fattrs.autofocus
    autosave=fattrs.autosave
    dir=fattrs.dir
    disabled=fattrs.disabled
    hidden=fattrs.hidden
    inputmode=fattrs.inputmode
    lang=fattrs.lang
    list=fattrs.list
    max=fattrs.max
    maxlength=fattrs.maxlength
    min=fattrs.min
    minlength=fattrs.minlength
    multiple=fattrs.multiple
    pattern=fattrs.pattern
    readonly=fattrs.readonly
    required=fattrs.required
    size=fattrs.size
    spellcheck=fattrs.spellcheck
    step=fattrs.step
    tabindex=fattrs.tabindex
    title=fattrs.title
    textarea=fattrs.textarea
    rows=fattrs.rows
    columns=fattrs.columns
}}
