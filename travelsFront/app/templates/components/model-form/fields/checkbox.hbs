<md-input-container class="checkbox-container">
{{#paper-checkbox
	label=label
	value=value 
	onChange=(action 'handleChange') 
	class="md-primary"
	classNames=fattrs.class
	autofocus=fattrs.autofocus
	disabled=fattrs.disabled
	icon=(if fattrs.disabled 'lock' (if fattrs.icon fattrs.icon null))
}}
{{ label }}
{{/paper-checkbox}}
</md-input-container>
{{#if (and hasErrors isTouched)}}
<div class="md-input-messages-animation md-auto-hide" ng-messages>
  {{#each errors as |error index|}}
    <div
      id="error-{{index}}"
      class="md-input-error">
      {{error.message}}
    </div>
  {{/each}}
</div>
{{/if}}
