{{#paper-select
    value=value
    onChange=(action 'handleChange')
    errors=errors
    label=label
    placeholder=label

    classNames=fattrs.class

    getItems=getChoicesCBPromise
    itemLabelCallback=getChoiceLabel

    type=fattrs.type
    icon=fattrs.icon
    accesskey=fattrs.accesskey
    autocomplete=fattrs.autocomplete
    autofocus=fattrs.autofocus
    autosave=fattrs.autosave
    dir=fattrs.dir
    disabled=disabled
    hidden=fattrs.hidden
    inputmode=fattrs.inputmode
    lang=fattrs.lang
    list=fattrs.list
    max=fattrs.max
    maxlength=fattrs.maxlength
    min=fattrs.min
    minlength=fattrs.minlength
    multiple=fattrs.multiple
    pattern=fattrs.pattern
    readonly=fattrs.readonly
    required=fattrs.required
    size=fattrs.size
    spellcheck=fattrs.spellcheck
    step=fattrs.step
    tabindex=fattrs.tabindex
    title=fattrs.title
    textarea=fattrs.textarea
    rows=fattrs.rows
    columns=fattrs.columns

    as |options|}}

{{#each options as |option|}}
  {{#paper-option value=option.value action=(action 'handleChange')}}
    {{option.label}}
  {{/paper-option}}
{{else}}
  {{#paper-option value='' disabled=true}}
    No choices available
  {{/paper-option}}
{{/each}}
{{/paper-select}}
