<td>{{petition.dse}}</td>
<td>{{petition.first_name}}</td>
<td>{{petition.last_name}}</td>
<td>{{petition.project.name}}</td>
<td>{{petition.arrival_point.name}}</td>
<td>{{to-date petition.created}}</td>
<td>{{to-date petition.updated}}</td>
<td>{{to-date petition.task_start_date}}</td>
<td>{{to-date petition.task_end_date}}</td>
<td>{{petition.status}}</td>
<td class="icon-cell">
{{#if (can "approve petition")}}
	{{#if (lte petition.status 3)}}
    {{#paper-button type="submit" raised=true onClick=(action "edit" petition) iconButton=true}}{{fa-icon "pencil"}}{{/paper-button}}
    {{#paper-button type="submit" raised=true onClick=(action "del" petition) iconButton=true}}{{fa-icon "trash-o"}}{{/paper-button}}
  	{{#paper-button type="submit" raised=true onClick=(action "undo" petition) iconButton=true}}{{fa-icon "undo"}}{{/paper-button}}   
  {{else if (eq petition.status 4)}}
  	{{#paper-button type="submit" raised=true onClick=(action "undo" petition) iconButton=true}}{{fa-icon "undo"}}{{/paper-button}}   
  {{/if}}
{{else}}
	{{#if (eq petition.status 1)}}
    {{#paper-button type="submit" raised=true onClick=(action "edit" petition) iconButton=true}}{{fa-icon "pencil"}}{{/paper-button}}
    {{#paper-button type="submit" raised=true onClick=(action "del" petition) iconButton=true}}{{fa-icon "trash-o"}}{{/paper-button}}
  {{else if (eq petition.status 2)}}
  	{{#paper-button type="submit" raised=true onClick=(action "undo" petition) iconButton=true}}{{fa-icon "undo"}}{{/paper-button}}   
  {{/if}}
{{/if}}  
</td>

