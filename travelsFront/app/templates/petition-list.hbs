{{page-toolbar pageTitle="Petition List"}}

<table class="table"> 
  {{#paper-content class="md-whiteframe-z1"}}
    <thead>
      {{#paper-list}}
        <tr>
          <th>Όνομα</th>
          <th>Επώνυμο</th>
          <th>Έργο</th>
          <th>Προορισμός</th>
          <th>Ημ/νια Δημιουργίας</th>
          <th>Τελευταία ανανέωση</th>
          <th>Ημ/νία Αναχώρησης</th>
          <th>Ημ/νία Επιστροφής</th>
          <th>Κατάσταση</th>
          <th>{{#paper-button raised=true primary=true onClick=(transition-to "petition") href="/petition" bubbles=false}}Νεα Αιτηση{{/paper-button}}</th>
        </tr>
      {{/paper-list}} 
    </thead>
  {{/paper-content}}
  
  {{#paper-content class="md-whiteframe-z1"}}
    <tbody>
      {{#paper-list}}
        {{#each model as |petition|}}
          {{#if petition.project.name}}
          {{#paper-item}}
            <tr>
              <td>{{petition.name}}</td>
              <td>{{petition.surname}}</td>
              <td>{{petition.project.name}}</td>
              <td>{{petition.arrivalPoint.name}}</td>
              <td>{{petition.creationDate}}</td>
              <td>{{petition.updateDate}}</td>
              <td>{{petition.taskStartDate}}</td>
              <td>{{petition.taskEndDate}}</td>
              <td>{{petition.status.name}}</td>
              <td>{{#paper-button type="submit" raised=true onClick=(action "petitionEdit" petition.id)}}Επεξεργασια{{/paper-button}}</td>
              <td>{{#paper-button type="submit" raised=true warn=true onClick=(action "petitionDelete" petition.id petition.status.name)}}Διαγραφη{{/paper-button}}</td>
              <td>{{#paper-button type="submit" raised=true onClick=(action "petitionUndo" petition.id)}}Αναιρεση Υποβολης{{/paper-button}}</td>
            </tr>
          {{/paper-item}}
          {{/if}}
        {{/each}}
      {{/paper-list}}
    </tbody>
  {{/paper-content}}
</table>


