<h4>Στοιχεία Προφίλ</h4><br>

<div class="profileForm form-group">
	<label for="first_name" class="col-sm-2 control-label">Όνομα</label>
	<div class="col-sm-4">
		{{input value=profile.first_name type="text" class="form-control" autofocus="autofocus"}}
	</div>
</div>

<div class="profileForm form-group">
	<label for="last_name" class="col-sm-2 control-label">Επώνυμο</label>
	<div class="col-sm-4">	
		{{input value=profile.last_name type="text" class="form-control" autofocus="autofocus"}}
	</div>
</div>

<div class="profileForm form-group">
	<label for="iban" class="col-sm-2 control-label">IBAN</label>
	<div class="col-sm-4">	
		{{input value=profile.iban type="text" class="form-control" autofocus="autofocus"}}
	</div>
	{{#if (v-get model 'iban' 'isInvalid') }}
	<font color="red">{{v-get model 'iban' 'message'}}</font>
	{{/if}} 

</div> 

<div class="profileForm form-group">
	<label for="specialtyID" class="col-sm-2 control-label">Ειδικότητα</label>
	<div class="col-sm-4">	
		<select onchange={{action "setSpecialty" value="target.value"}}>
			<option value=""></option>

			{{#each specialties as |specialtyChoice|}}
			<option value={{specialtyChoice.id}} selected={{eq specialtyChoice.id profile.specialtyID.id}}>{{specialtyChoice.name}}</option>

			{{/each}}
		</select>		
	</div>
</div> 

<div class="profileForm form-group">
	<label for="kind" class="col-sm-2 control-label">Ιδιότητα</label>
	<div class="col-sm-4">	
		<select onchange={{action "setKind" value="target.value"}}>
			<option value=""></option>

			{{#each kinds as |kindChoice|}}

			<option value={{kindChoice.id}} selected={{eq kindChoice.id profile.kind.id}}>{{kindChoice.name}}</option>

			{{/each}}
		</select>
	</div>
</div>

<div class="profileForm form-group">
	<label for="taxRegNum" class="col-sm-2 control-label">ΑΦΜ</label>
	<div class="col-sm-4">	
		{{input value=profile.taxRegNum type="text" class="form-control" autofocus="autofocus"}}

	</div>
	{{#if (v-get model 'taxRegNum' 'isInvalid') }}
	<font color="red">{{v-get model 'taxRegNum' 'message'}}</font>
	{{/if}}

</div>

<div class="profileForm form-group">
	<label for="taxOffice" class="col-sm-2 control-label">ΔΟΥ</label>
	<div class="col-sm-4">	
		<select onchange={{action "setTaxOffice" value="target.value"}}>
			{{#each tax-offices  as |taxOfficeChoice|}}

			<option value={{taxOfficeChoice.id}} selected={{eq taxOfficeChoice.id profile.taxOffice.id}}>{{taxOfficeChoice.name}}</option>

			{{/each}}
		</select>
	</div>
</div>
